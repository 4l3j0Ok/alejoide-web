---
interface Props {
  sectionId: string;
  sectionTitle: string;
}
---

<section id={Astro.props.sectionId}>
  <div class="content">
    <div class="title">
      <h1>{Astro.props.sectionTitle}</h1>
    </div>
    <div class="text">
      <slot />
    </div>
  </div>
</section>

<style>
  section {
    margin-top: 15rem;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  .content {
    display: flex;
    justify-content: space-around;
    align-items: flex-start;
    width: 70%;
    max-width: 1500px;
  }
  .content h1 {
    font-size: 3.5em;
    font-weight: 700;
    margin: 0;
    color: var(--accentColor);
  }
  .content > * {
    flex-basis: 40%;
    box-sizing: border-box;
  }
  @media (max-width: 900px) {
    .content {
      font-size: 1.25em;
      flex-direction: column;
      width: 60%;
    }
  }
</style>
