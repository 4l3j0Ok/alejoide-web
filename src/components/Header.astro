---
import { Image } from "astro:assets";
import meImage from "../images/me.webp";
---

<header>
	<div class="content">
		<div class="item">
			<p>Hola, soy</p>
			<h1>Alejo Sarmiento</h1>
			<p><strong>SRE</strong> y <strong>Desarrollador de aplicaciones</strong></p>
		</div>
		<div class="item">
			<Image src={meImage} alt="Alejo Sarmiento" />
		</div>
</div>
</div>

<style>
	header {
		height: 100vh;
		color: white;
		display: grid;
		place-items: center;
	}
	.content {
		font-size: 1.5em;
		display: flex;
		justify-content: space-around;
		align-items: center;
		width: 70%;
		max-width: 1500px;
	}
	.content p {
		margin-bottom: 0;
		margin-top: 0;
	}
	.content h1 {
		font-size: 2.5em;
		font-weight: 700;
		color: var(--headerNameColor);
		margin-bottom: 0;
		margin-top: 0;
	}
	.item {
    flex-basis: 40%;
		box-sizing: border-box;
	}
	.item img {
    width: 100%;
		height: 100%;
		mask-image: linear-gradient(
			black 80%,
			transparent
		)
	}
	@media (max-width: 900px) {
		.content {
			font-size: 1.25em;
			flex-direction: column;
			width: 60%;
		}
		.item {
			flex-grow: 1;
			margin-top: 1em
		}
	}
</style>