---
import Section from "../layouts/Section.astro";
import Image from "astro/components/Image.astro";
import { projects } from "../config/projects.js";
---

<Section sectionId="Projects" , sectionTitle="Proyectos">
  <div class="projects">
    {
      projects.map((project) => {
        const { title, description, image, webUrl, repoUrl } = project;
        return (
          <div class="project">
            <Image src={image} alt={title} />
            <div class="info">
              <h2>{title}</h2>
              <p>{description}</p>
            </div>
            <div class="links">
              <a href={webUrl} target="_blank">
                Ver sitio
              </a>
              <a href={repoUrl} target="_blank">
                Ver c√≥digo
              </a>
            </div>
          </div>
        );
      })
    }
  </div>
</Section>

<style>
  .projects {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1em;
  }
  .project {
    background-color: rgba(15, 15, 15, 0.5);
    backdrop-filter: blur(0.5em);
    display: flex;
    flex-direction: column;
    width: 20em;
    justify-content: space-between;
    padding: 1.5em;
    border-radius: 1em;
    height: 25em;
    img {
      width: 100%;
      height: 10em;
      border-radius: 1em;
      object-fit: cover;
    }
  }
  .info {
    margin: 0 0.5em 0 0.5em;
    height: 100%;
  }
  .links {
    display: flex;
    gap: 1em;
    width: 100%;
    flex-direction: column;
    /* justify-self: flex-end; */
  }
  .links a {
    color: white;
    background-color: var(--accentColor);
    padding: 0.5em;
    border-radius: 0.5em;
    text-decoration: none;
    text-align: center;
  }
</style>
